---
import CloudinaryLogo from "../components/CloudinaryLogo.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Vectorize Image">
	<header
		class="w-full max-w-5xl relative md:absolute top-0 flex items-center justify-between px-6 xl:px-0 py-3 mb-10 border-b-[1px] border-gray-100"
	>
		<h1 class="text-2xl md:text-3xl font-bold">
			Cloud<span class="text-gradient">VideoSlider</span>
		</h1>
		<ul class="flex gap-8 m-0">
			<li>
				<a
					href="mailto:torresgol10.it@gmail.com"
					class="text-gray-500 hover:text-violet-500">Contact</a
				>
			</li>
		</ul>
	</header>
	<main class="w-full max-w-5xl">
		<div
			class="w-full flex flex-col lg:flex-row items-start justify-between gap-8 px-6 xl:px-0"
		>
			<div
				class="flex flex-col lg:flex-col items-center lg:items-start md:max-w-3xl lg:max-w-lg"
			>
				<picture
					class="w-full aspect-video overflow-hidden rounded-[2rem] mb-5"
				>
					<img
						class="object-cover"
						src="edit.jpg"
						alt="Create VideoSlider"
					/>
				</picture>
				<h1
					class="font-bold tracking-tight mb-3 text-4xl md:text-5xl lg:text-6xl text-center lg:!text-left"
				>
					Create <span class="text-gradient">VideoSlider</span>
				</h1>
				<p class="font-bold text-xl m-0 text-center lg:!text-left mb-2">
					100% Automatically and
					<span class="text-gradient"> Free</span>
				</p>
				<p class="mb-0">
					Transform your static images into video sliders with our
					free service. Create unique and dynamic presentations in
					seconds.
				</p>
			</div>
			<div class="relative w-full flex flex-col gap-4 lg:pl-5">
				<h2 class="text-2xl font-bold">Video options</h2>
				<form
					id="dropzone"
					class="w-full flex flex-col sm:justify-center sm:items-center sm:gap-8"
					action="#"
				>
					<div class="w-full">
						<input
							id="clipDuration"
							class="w-full flex items-center rounded-md ring-1 ring-neutral-400 shadow-sm py-3 px-2 hover:ring-orange-400 focus-visible:ring-orange-400 text-neutral-800"
							value=""
							placeholder="Clip duration"
							type="text"
							name="clipDuration"
						/>
						<label
							class="block mt-2 text-neutral-400"
							for="clipDuration"
							>The duration of the clip in milliseconds</label
						>
					</div>
					<div class="w-full">
						<input
							id="transformation"
							class="w-full flex items-center rounded-md ring-1 ring-neutral-400 shadow-sm py-3 px-2 hover:ring-orange-400 focus-visible:ring-orange-400"
							value=""
							placeholder="Transformation"
							type="text"
							name="transformation"
						/><label
							class="block mt-2 text-neutral-400"
							for="transformation"
							>A Cloudinary transformation in URL syntax</label
						>
					</div>
					<div class="w-full">
						<select
							id="efffects"
							class="w-full flex items-center rounded-md ring-1 ring-neutral-400 shadow-sm py-3 px-2 hover:ring-orange-400 focus-visible:ring-orange-400"
							name="efffects"
						>
							<option>Fade</option>
							<option>Slide</option>
							<option>Blur</option>
						</select><label
							class="block mt-2 text-neutral-400"
							for="transformation">Effects parameters</label
						>
					</div>
					<div class="flex flex-row gap-4">
						<button
							class="btn font-bold pointer-events-none bg-blue-600 rounded-full text-bold text-white text-xl px-6 py-4"
						>
							Add image
						</button>
						<button
							class="btn font-bold pointer-events-none bg-blue-600 rounded-full text-bold text-white text-xl px-6 py-4"
						>
							Create
						</button>
					</div>
				</form>
			</div>
		</div>
	</main>
	<footer
		class="w-full max-w-5xl relative md:absolute bottom-0 flex justify-center items-center gap-x-2 px-6 xl:px-0 py-3 mt-10 font-semibold"
	>
		Built with <a
			href="https://cloudinary.com"
			target="_blank"
			rel="noreferrer"
			><CloudinaryLogo />
		</a>
	</footer>
</Layout>

<style>
	.dropzone-form * {
		position: relative;
		z-index: 2;
	}
	.dropzone-form::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		z-index: 1;
		width: 100%;
		height: 100%;
		border-radius: 2rem;
		background-color: #ffeeee;
	}
	.dropzone-form::after {
		content: "";
		position: absolute;
		top: 1.5rem;
		left: -1.5rem;
		z-index: 0;
		width: 100%;
		height: 100%;
		border-radius: 2rem;
		background-image: radial-gradient(currentColor 1px, transparent 1px);
		background-size: 10px 10px;
		color: var(--primary);
	}
	@media (min-width: 1024px) {
		.dropzone-form::after {
			top: 2rem;
			left: -2rem;
		}
	}
</style>
