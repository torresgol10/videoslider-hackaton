---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Vectorize Image">
	<Header />
	<main class="w-full max-w-5xl">
		<div
			class="w-full flex flex-col lg:flex-row items-start justify-between gap-8 px-6 xl:px-0"
		>
			<div
				class="flex flex-col lg:flex-col items-center lg:items-start w-full lg:max-w-lg"
			>
				<picture
					class="w-full aspect-video overflow-hidden rounded-[2rem] mb-5"
				>
					<img
						class="w-full h-full object-cover"
						src="edit.jpg"
						alt="Create VideoSlider"
					/>
				</picture>
				<h1
					class="font-bold tracking-tight mb-3 text-4xl md:text-5xl lg:text-6xl text-center lg:!text-left"
				>
					Create <span class="text-gradient">VideoSlider</span>
				</h1>
				<p class="font-bold text-xl m-0 text-center lg:!text-left mb-2">
					100% Automatically and
					<span class="text-gradient"> Free</span>
				</p>
				<p class="mb-0">
					Transform your static images into video sliders with our
					free service. Create unique and dynamic presentations in
					seconds.
				</p>
			</div>
			<div class="relative w-full flex flex-col gap-4 lg:pl-5">
				<ul class="flex flex-row flex-wrap gap-2 mb-4">
					<li class="w-[100px] h-[100px] overflow-hidden rounded-lg"><img class="w-full h-full object-cover" width="180" height="180" src="https://images.unsplash.com/photo-1677856161803-c963ab0941a6?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwzM3x8fGVufDB8fHx8&auto=format&fit=crop&w=400&q=60"></li>
					<li class="w-[100px] h-[100px] overflow-hidden rounded-lg"><img class="w-full h-full object-cover" width="180" height="180" src="https://images.unsplash.com/photo-1677856161803-c963ab0941a6?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwzM3x8fGVufDB8fHx8&auto=format&fit=crop&w=400&q=60"></li>
					<li class="w-[100px] h-[100px] overflow-hidden rounded-lg"><img class="w-full h-full object-cover" width="180" height="180" src="https://images.unsplash.com/photo-1677856161803-c963ab0941a6?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwzM3x8fGVufDB8fHx8&auto=format&fit=crop&w=400&q=60"></li>
					<li class="w-[100px] h-[100px] overflow-hidden rounded-lg"><img class="w-full h-full object-cover" width="180" height="180" src="https://images.unsplash.com/photo-1677856161803-c963ab0941a6?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwzM3x8fGVufDB8fHx8&auto=format&fit=crop&w=400&q=60"></li>
					<li class="w-[100px] h-[100px] overflow-hidden rounded-lg"><img class="w-full h-full object-cover" width="180" height="180" src="https://images.unsplash.com/photo-1677856161803-c963ab0941a6?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwzM3x8fGVufDB8fHx8&auto=format&fit=crop&w=400&q=60"></li>
					<li class="w-[100px] h-[100px] overflow-hidden rounded-lg"><img class="w-full h-full object-cover" width="180" height="180" src="https://images.unsplash.com/photo-1677856161803-c963ab0941a6?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwzM3x8fGVufDB8fHx8&auto=format&fit=crop&w=400&q=60"></li>
				</ul>
				<h2 class="text-2xl font-bold">Video options</h2>
				<form
					id="dropzone"
					class="w-full flex flex-col sm:justify-center gap-5"
					action="#"
				>
					<div class="w-full">
						<input
							id="clipDuration"
							class="w-full flex items-center rounded-md ring-1 ring-neutral-400 shadow-sm py-3 px-2 hover:ring-orange-400 focus-visible:ring-orange-400 text-neutral-800"
							value=""
							placeholder="Clip duration"
							type="text"
							name="clipDuration"
						/>
						<label
							class="block mt-2 text-neutral-400"
							for="clipDuration"
							>The duration of the clip in milliseconds</label
						>
					</div>
					<div class="w-full">
						<input
							id="transformation"
							class="w-full flex items-center rounded-md ring-1 ring-neutral-400 shadow-sm py-3 px-2 hover:ring-orange-400 focus-visible:ring-orange-400"
							value=""
							placeholder="Transformation"
							type="text"
							name="transformation"
						/><label
							class="block mt-2 text-neutral-400"
							for="transformation"
							>A Cloudinary transformation in URL syntax</label
						>
					</div>
					<div class="w-full">
						<select
							id="efffects"
							class="w-full flex items-center rounded-md ring-1 ring-neutral-400 shadow-sm py-3 px-2 hover:ring-orange-400 focus-visible:ring-orange-400"
							name="efffects"
						>
							<option>Fade</option>
							<option>Slide</option>
							<option>Blur</option>
						</select><label
							class="block mt-2 text-neutral-400"
							for="transformation">Effects parameters</label
						>
					</div>
					<div class="flex flex-row gap-4">
						<button
							class="btn font-bold pointer-events-none bg-blue-600 rounded-full text-bold text-white text-xl px-6 py-4"
						>
							Add image
						</button>
						<button
							class="btn font-bold pointer-events-none bg-blue-600 rounded-full text-bold text-white text-xl px-6 py-4"
						>
							Create
						</button>
					</div>
				</form>
			</div>
		</div>
	</main>
	<Footer />
</Layout>
