---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Vectorize Image">
	<Header />
	<main class="w-full lg:max-w-5xl">
		<div class="w-full flex flex-row flex-wrap justify-center items-center gap-20 px-6 xl:px-0">
			<div class="flex flex-col text-center">
				<img
					class="object-fit block rounded-full mb-5 w-[100px]"
					src="https://avatars.githubusercontent.com/u/40922354?v=4"
					alt="Iván Torres"
				/>
				<h2 class="text-md font-bold">Iván Torres</h2>
				<p>
					<a class="hover:text-violet-500" href="mailto:torresgol10.it@gmail.com">Email</a><br />
					<a class="hover:text-violet-500" href="https://github.com/torresgol10">Github</a>
				</p>
			</div>
			<div class="flex flex-col text-center">
				<img
					class="object-fit block rounded-full mb-5 w-[100px]"
					src="https://www.badiali.es/assets/img/badiali.es-bw-circle.png"
					alt="Luis Badiali"
				/>
				<h2 class="text-md font-bold">Luis Badiali</h2>
				<p>
					<a class="hover:text-violet-500" href="mailto:luis@badiali.es">Email</a><br />
					<a class="hover:text-violet-500" href="https://github.com/badiali">Github</a>
				</p>
			</div>
		</div>
	</main>
	<Footer />
</Layout>
