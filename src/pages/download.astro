---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Vectorize Image">
	<Header />
	<main class="w-full max-w-5xl">
		<div class="w-full flex-col px-6 xl:px-0">
			<video class="object-cover w-full aspect-[16:10] rounded-[2rem] mb-5" src="./neon.mp4" poster="./poster.jpg" autoplay loop muted></video>
			<a
				href="#"
				download="#"
				class="block btn font-bold bg-blue-600 rounded-full text-bold text-white text-xl text-center px-6 py-4 mt-10 mx-auto max-w-md"
			>
				Download VideoSlider
			</a>
		</div>
	</main>
	<Footer />
</Layout>
